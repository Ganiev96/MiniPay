<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>MiniPay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-dark bg-dark px-3">
        <span class="navbar-brand">MiniPay</span>

        @if (Context.Session.GetInt32("UserId") != null)
        {
            <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-light btn-sm">
                Logout
            </a>
        }

    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

</body>
</html>
